public class Main
{
	public static void main(String[] args) {
		System.out.println(" while demonstration");
		int i=1;
		while(i<10){
		    if(i%2==0)
		    System.out.println(true);
		    else
		    System.out.println(false);
		   i++; 
		}
		System.out.println(i);
		System.out.println("******************");
		while(i>1){
		    if(i%2==1)
		        System.out.println(false);
		    else
		        System.out.println(true);
		  i--;      
		}
		
	}
}
